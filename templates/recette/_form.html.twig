{{ form_start(form) }}

<div class="form-floating mb-3">
	{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
	{{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.preparationTime, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.preparationTime, 'Temps de préparation (en minutes)', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.cookingTime, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.cookingTime, 'Temps de cuisson (en minutes)', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.numberPortions, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.numberPortions, 'Nombre de portions', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="mb-3 form-floating">
	{{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
	{# {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label floatingInput'}}) }} #}
	{% if form_errors(form.image) %}
		<div class="alert alert-danger mt-2">
			{{ form_errors(form.image) }}
		</div>
	{% endif %}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.instruction, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.instruction, 'Instructions', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.ingredient_text, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.ingredient_text, 'ingredient_text', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="form-floating mb-3">
	{{ form_widget(form.ingredients, {'attr': {'class': 'form-control'}}) }}
	{{ form_label(form.ingredients, 'Ingrédients', {'label_attr': {'class': 'form-label'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.categories, 'Catégories', {'label_attr': {'class': 'form-label'}}) }}
    <div class="row">
        {% for categoryField in form.categories %}
            <div class="col-md-4">
                <div class="form-check">
                    {{ form_widget(categoryField, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(categoryField, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>



<div class="text-center">
	{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg mt-3 col-12 text-light'}}) }}
</div>

{{ form_end(form) }}

